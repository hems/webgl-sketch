{
  "name": "webgl-sketch",
  "version": "0.0.0",
  "description": "webgl-sketch",
  "scripts": {
    "setup": "npm i",
    "start": "concurrently 'npm run server' 'npm run watch:css' 'npm run watch:js' 'npm run watch:html'",
    "server": "live-server ./dist --port 3000 --quiet --watch ./dist --watch ./src --wait 0",
    "watch:css": "node-sass --watch ./src/styles/app.scss dist/css/app.css",
    "watch:js": "webpack --colors --watch",
    "watch:html": "pug --watch ./src/templates/*.pug --pretty --out ./dist",
    "assets:textures": "shjs scripts/textures",
    "assets:geometry": "shjs scripts/geometry",
    "assets:audio": "shjs scripts/audio"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IVXVIXVIII/webgl-sketch.git"
  },
  "author": "David Paul Rosser <info@davidpaulrosser.co.uk> (http://ivxvixviii.io/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IVXVIXVIII/webgl-sketch/issues"
  },
  "homepage": "https://github.com/IVXVIXVIII/webgl-sketch",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.16.0",
    "concurrently": "^2.0.0",
    "globby": "^6.1.0",
    "image-size": "^0.5.0",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.0",
    "live-server": "^0.9.2",
    "node-sass": "^3.8.0",
    "promise.pipe": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "sharp": "^0.16.2",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "@stinkdigital/detector": "git+ssh://git@github.com/stinkdigital/detector.git#0.1.5",
    "dat-gui": "^0.5.0",
    "happens": "^0.6.0",
    "lodash": "^4.17.2",
    "object-assign": "^4.1.0",
    "shelljs": "^0.7.5",
    "sono": "git+ssh://git@github.com/stinkdigital/sono.git#0.1.83",
    "three": "^0.82.0",
    "three-orbit-controls": "^72.0.0"
  }
}
