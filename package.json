{
  "name": "webgl-sketch",
  "version": "0.0.0",
  "description": "webgl-sketch",
  "scripts": {
    "setup": "npm i",
    "start": "concurrently 'npm run server' 'npm run watch:css' 'npm run watch:js' 'npm run watch:html'",
    "server": "live-server ./dist --port 3000 --quiet --watch ./dist --watch ./src --wait 0",
    "watch:css": "node-sass --watch ./src/styles/app.scss dist/css/app.css",
    "watch:js": "webpack --colors --watch",
    "watch:html": "pug --watch ./src/templates/*.pug --pretty --out ./dist",
    "assets:textures": "shjs scripts/textures",
    "assets:geometry": "shjs scripts/geometry",
    "assets:audio": "shjs scripts/audio",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "npm run lint:eslint",
    "lint:eslint": "eslint --fix --ext .js ./src --cache",
    "lint:scss": "scss-lint ./src/styles/*.scss"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IVXVIXVIII/webgl-sketch.git"
  },
  "author": "David Paul Rosser <info@davidpaulrosser.co.uk> (http://ivxvixviii.io/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IVXVIXVIII/webgl-sketch/issues"
  },
  "homepage": "https://github.com/IVXVIXVIII/webgl-sketch",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.16.0",
    "concurrently": "^2.0.0",
    "eslint": "2.13.1",
    "eslint-config-airbnb": "9.0.1",
    "eslint-import-resolver-babel-module": "^2.0.1",
    "eslint-import-resolver-webpack": "0.4.0",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-jsx-a11y": "2.0.1",
    "eslint-plugin-react": "5.2.2",
    "globby": "^6.1.0",
    "image-size": "^0.5.0",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.0",
    "live-server": "^0.9.2",
    "node-sass": "^3.8.0",
    "pre-push": "^0.1.1",
    "promise.pipe": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "sharp": "^0.16.2",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "@stinkdigital/detector": "git+ssh://git@github.com/stinkdigital/detector.git#0.1.5",
    "dat-gui": "^0.5.0",
    "happens": "^0.6.0",
    "lodash": "^4.17.2",
    "object-assign": "^4.1.0",
    "shelljs": "^0.7.5",
    "sono": "git+ssh://git@github.com/stinkdigital/sono.git#0.1.83",
    "three": "^0.82.0",
    "three-orbit-controls": "^72.0.0"
  },
  "pre-push": [
    "lint"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "plugins": [
      "react",
      "jsx-a11y"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "global-require": 0,
      "indent": [
        1,
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "new-cap": [
        2,
        {
          "capIsNew": false,
          "newIsCap": true
        }
      ],
      "no-param-reassign": 0,
      "no-shadow": 0,
      "no-underscore-dangle": 0,
      "react/jsx-indent-props": [
        1,
        "tab"
      ],
      "react/jsx-indent": [
        1,
        "tab"
      ]
    }
  }
}
