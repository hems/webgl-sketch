{
  "name": "webgl-sketch",
  "version": "0.0.0",
  "description": "webgl-sketch",
  "scripts": {
    "setup": "npm i",
    "start": "concurrently 'npm run server' 'npm run watch:css' 'npm run watch:js' 'npm run watch:html'",
    "server": "live-server ./dist --port 3000 --quiet --watch ./dist --watch ./src --wait 0",
    "watch:css": "node-sass --watch ./src/styles/app.scss dist/css/app.css",
    "watch:js": "webpack --colors --watch",
    "watch:html": "pug --watch ./src/templates/*.pug --pretty --out ./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IVXVIXVIII/webgl-sketch.git"
  },
  "author": "David Paul Rosser <info@davidpaulrosser.co.uk> (http://ivxvixviii.io/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IVXVIXVIII/webgl-sketch/issues"
  },
  "homepage": "https://github.com/IVXVIXVIII/webgl-sketch",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "concurrently": "^2.0.0",
    "live-server": "^0.9.2",
    "node-sass": "^3.8.0",
    "pug-cli": "^1.0.0-alpha6",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "dat-gui": "^0.5.0",
    "three": "^0.78.0",
    "three-orbit-controls": "^72.0.0"
  }
}
